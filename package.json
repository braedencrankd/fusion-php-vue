{
  "name": "fusion-php-vue",
  "displayName": "fusion-php-vue",
  "description": "Allows for Fusion PHP <php> tag highlighting",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "vuephp",
        "aliases": [
          "VuePHP",
          "vuephp"
        ],
        "extensions": [
          ".vue"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vuephp",
        "scopeName": "source.vuephp",
        "path": "./syntaxes/phpInVue.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.php": "php",
          "source.vue": "vue"
        }
      }
    ],
    "languageServer": {
      "embeddedLanguages": {
        "meta.embedded.block.php": "php",
        "source.vue": "vue"
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "extensionDependencies": [
    "bmewburn.vscode-intelephense-client",
    "octref.vetur"
  ],
  "devDependencies": {
    "@types/vscode": "^1.85.0"
  }
}